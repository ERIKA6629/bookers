<h1>Books</h1>

<% @books.each do |book| %>
  <P>Title</P>
  <span><%= book.title %></span>
<% end %>

<%= form_with model: @book do |f| %>
  <h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  
  <%= f.submit 'Create Book' %>
  
  
<% end %>
