<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  
  <thbody>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td> <%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
    <!--<td><%= link_to "Destroy", "/books/show" %></td>-->
  </tr>
  
<% end %>

  </thbody>
</table>

<%= form_with model: @book do |f| %>
  <h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  
  <%= f.submit 'Create Book' %>
  
  
<% end %>
